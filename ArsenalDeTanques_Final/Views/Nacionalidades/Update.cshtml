@{
    ViewData["Title"] = "Atualizar nação";
}
@model Nacionalidade

<h2>Atualizar nacionalidade</h2>
<hr />
<div class="row">
    <form class="col-md-4" asp-action="Update">
        <div class="form-group">
            <span class="text-danger" asp-validation-for="Nome"></span>
            <label asp-for="Nome" class="control-label"></label>
            <input asp-for="Nome" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="linkBandeira" class="control-label"></label>
            <input asp-for="linkBandeira" class="form-control" />
        </div>
        <div class="form-group">
            <input class="btn btn-success" type="submit" value="Atualizar!" />
            <a class="btn btn-info" asp-controller="Nacionalidades" asp-action="Index">Voltar!</a>
        </div>
    </form>
</div>

