@model ArsenalDeTanques.Models.TipoTanque

@{
    ViewData["Title"] = "Create";
}

<h1>Criar tipo</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomeTipo" class="control-label"></label>
                <input asp-for="NomeTipo" class="form-control" />
