@model ArsenalDeTanques.Models.TipoTanque

@{
    ViewData["Title"] = "Delete";
}

<h1>Deletar tipo</h1>

<h3>Você tem certeza que deseja deletar isso?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NomeTipo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeTipo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LinkImagem)
        </dt>
        <dd class = "col-sm-10">
            <img src="@Html.DisplayFor(model => model.LinkImagem)" style="width:60px;height:30px;" />
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a class="btn btn-outline-dark" asp-action="Index">Voltar para a lista</a>
    </form>
</div>
