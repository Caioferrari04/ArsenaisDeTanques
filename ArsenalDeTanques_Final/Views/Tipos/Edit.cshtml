@model ArsenalDeTanques.Models.TipoTanque

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar tipo</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label asp-for="NomeTipo" class="control-label"></label>
                <input asp-for="NomeTipo" class="form-control" />
                <span asp-validation-for="NomeTipo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LinkImagem" class="control-label"></label>
                <input asp-for="LinkImagem" class="form-control" />
                <span asp-validation-for="LinkImagem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-outline-dark" asp-action="Index">Voltar para a lista</a>
</div> 

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
