@{
    ViewData["Title"] = "Criar tanque";
}
@model Tanque

<h2>Criar tanque</h2>
<hr />
<div class="row justify-content-center">
    <form class="col-md-5" asp-action="Criar">
        <div class="row">
            <div class="form-group mr-md-5">
                <label asp-for="LinkImagem" class="control-label"></label>
                <input asp-for="LinkImagem" class="form-control" />
            </div>
            <div class="form-group">
                <span class="text-danger" asp-validation-for="Nome"></span>
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
            </div>
        </div>
        <div class="row">
            <div class="form-group mr-md-5">
                <span class="text-danger" asp-validation-for="Calibre"></span>
                <label asp-for="Calibre" class="control-label"></label>
                <input asp-for="Calibre" class="form-control" />
            </div>
            <div class="form-group">
                <span class="text-danger" asp-validation-for="PotenciaMotor"></span>
                <label asp-for="PotenciaMotor" class="control-label"></label>
                <input asp-for="PotenciaMotor" class="form-control" />
            </div>
        </div>
        <div class="row">
            <div class="form-group mr-md-5">
                <label asp-for="QuantidadeTripulacao" class="control-label"></label>
                <input asp-for="QuantidadeTripulacao" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="DataFabricacao" class="control-label"></label>
                <input asp-for="DataFabricacao" class="form-control" />
            </div>
        </div>
        <div class="row">
            <div class="form-group mr-md-5">
                <span class="text-danger" asp-validation-for="Velocidade"></span>
                <label asp-for="Velocidade" class="control-label"></label>
                <input asp-for="Velocidade" class="form-control" />
            </div>
            <div class="form-group">
                <span class="text-danger" asp-validation-for="nacionalidadeId"></span>
                <label asp-for="nacionalidadeId" class="control-label"></label>
                <select asp-for="nacionalidadeId" class="form-control" asp-items="ViewBag.Tanques">
                    <option value="">Nacionalidade....</option>
                </select>
            </div>
        </div>
        <div class="row">
            <div class="form-group mr-md-5">
                <span class="text-danger" asp-validation-for="PrecoCompra"></span>
                <label asp-for="PrecoCompra" class="control-label"></label>
                <input asp-for="PrecoCompra" class="form-control" />
            </div>
            <div class="form-group">
                <span class="text-danger" asp-validation-for="tipoId"></span>
                <label asp-for="tipoId" class="control-label"></label>
                <select asp-for="tipoId" class="form-control" asp-items="ViewBag.tipos">
                    <option value="">Tipo....</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <input class="btn btn-success" type="submit" value="Criar!" />
            <a class="btn btn-info" asp-controller="Tanques" asp-action="Index">Voltar!</a>
        </div>
    </form>
</div>

