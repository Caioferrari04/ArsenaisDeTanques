@page
@model SetPasswordModel
@{
    ViewData["Title"] = "Criar senha";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h4>Crie sua senha</h4>
<partial name="_StatusMessage" for="StatusMessage" />
<p class="text-info">
    Você não possui uma senha local para essa conta. Crie uma senha local para poder logar
    sem serviços externos.
</p>
<div class="row">
    <div class="col-md-6">
        <form id="set-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.NewPassword">Senha</label>
                <input asp-for="Input.NewPassword" class="form-control" />
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword">Confirmar senha</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Criar senha</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}